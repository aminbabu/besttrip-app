<!DOCTYPE html>
<html lang="en">
<!--begin::Head-->
<%- include('../../partials/head', { title }) %>
<!--end::Head-->
<!--begin::Body-->

<body id="kt_app_body" data-kt-app-layout="light-sidebar" data-kt-app-header-fixed="true" data-kt-app-sidebar-enabled="true" data-kt-app-sidebar-fixed="true" data-kt-app-sidebar-hoverable="true" data-kt-app-sidebar-push-header="true" data-kt-app-sidebar-push-toolbar="true" data-kt-app-sidebar-push-footer="true" data-kt-app-toolbar-enabled="true" class="app-default">
  <!--begin::Theme mode setup on page load-->
  <%- include('../../partials/theme-mode.ejs') %>
  <!--end::Theme mode setup on page load-->
  <!--begin::App-->
  <div class="d-flex flex-column flex-root app-root" id="kt_app_root">
    <!--begin::Page-->
    <div class="app-page flex-column flex-column-fluid" id="kt_app_page">
      <!--begin::Header-->
      <%- include('../../partials/header', { user }) %>
      <!--end::Header-->
      <!--begin::Wrapper-->
      <div class="app-wrapper flex-column flex-row-fluid" id="kt_app_wrapper">
        <!--begin::Sidebar-->
        <%- include('../../partials/sidebar') %>
        <!--end::Sidebar-->
        <!--begin::Main-->
        <div class="app-main flex-column flex-row-fluid" id="kt_app_main">
          <!--begin::Content wrapper-->
          <div class="d-flex flex-column flex-column-fluid">
            <!--begin::Toolbar-->
            <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
              <!--begin::Toolbar container-->
              <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
                <!--begin::Page title-->
                <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                  <!--begin::Title-->
                  <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">
                    Site Settings
                  </h1>
                  <!--end::Title-->
                  <!--begin::Breadcrumb-->
                  <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-muted">
                      <a href="/" class="text-muted text-hover-primary">Home</a>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item">
                      <span class="bullet bg-gray-500 w-5px h-2px"></span>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-muted">Settings</li>
                    <!--end::Item-->
                  </ul>
                  <!--end::Breadcrumb-->
                </div>
                <!--end::Page title-->
              </div>
              <!--end::Toolbar container-->
            </div>
            <!--end::Toolbar-->
            <!--begin::Content-->
            <div id="kt_app_content" class="app-content flex-column-fluid">
              <!--begin::Content container-->
              <div id="kt_app_content_container" class="app-container container-xxl">
                <!--begin::Card-->
                <div class="card card-flush">
                  <!--begin::Card body-->
                  <div class="card-body">
                    <!--begin::Input group-->
                    <div class="fv-row d-flex justify-content-end mb-10">
                      <div class="form-check form-switch form-check-solid">
                        <label class="form-check-label">
                          <input class="form-check-input form-check-input-custom" type="checkbox" id="kt_theme_switcher" data-kt-theme-url="/api/settings/themes/status" <% if (defaultTheme?.status === 'active') { %> checked <% } %> />
                          <span class="enabled">Default Theme</span>
                          <span class="disabled">Alternative Theme</span>
                        </label>
                      </div>
                    </div>
                    <!--end::Input group-->
                    <!--begin:::Tabs-->
                    <ul class="nav nav-tabs nav-line-tabs nav-line-tabs-2x border-transparent fs-4 fw-semibold mb-15">
                      <!--begin:::Tab item-->
                      <li class="nav-item">
                        <a class="nav-link text-active-primary d-flex align-items-center pb-5 active" data-bs-toggle="tab" href="#kt_settings_theme_general">
                          <i class="ki-duotone ki-home fs-2 me-2"></i>
                          Default Theme
                        </a>
                      </li>
                      <!--end:::Tab item-->
                      <!--begin:::Tab item-->
                      <li class="nav-item">
                        <a class="nav-link text-active-primary d-flex align-items-center pb-5" data-bs-toggle="tab" href="#kt_settings_theme_alternative">
                          <i class="ki-duotone ki-message-programming fs-2 me-2">
                            <span class="path1"></span>
                            <span class="path2"></span>
                            <span class="path3"></span>
                            <span class="path4"></span>
                          </i>
                          Alternative Theme
                        </a>
                      </li>
                      <!--end:::Tab item-->
                    </ul>
                    <!--end:::Tabs-->
                    <!--begin:::Tab content-->
                    <div class="tab-content" id="themeSettingsTabPanes">
                      <!--begin:::Tab pane-->
                      <div class="tab-pane fade show active" id="kt_settings_theme_general" role="tabpanel">
                        <!--begin::Form-->
                        <form id="kt_settings_theme_general_form" class="form" data-kt-url="/api/settings/themes/default" action="/api/settings/themes/default">
                          <!--begin::Heading-->
                          <div class="row mb-7">
                            <div class="col-md-9 offset-md-3">
                              <h2>Default Theme Settings</h2>
                            </div>
                          </div>
                          <!--end::Heading-->
                          <!--begin::Input group-->
                          <div class="row fv-row mb-7">
                            <div class="col-md-3 text-md-end">
                              <!--begin::Label-->
                              <label class="fs-6 fw-semibold form-label mt-3">
                                <span>
                                  Illustration Image
                                </span>
                                <span class="ms-1" data-bs-toggle="tooltip" title="Upload your website Logo.">
                                  <i class="ki-duotone ki-information-5 text-gray-500 fs-6">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                    <span class="path3"></span>
                                  </i>
                                </span>
                              </label>
                              <!--end::Label-->
                            </div>
                            <div class="col-md-9">
                              <div class="row">
                                <div class="col-lg-6 col-xl-4">
                                  <!--begin::Input group-->
                                  <div class="fv-row">
                                    <!--begin::Preview Container-->
                                    <div class="kt-file-uploader">
                                      <!--begin::Message-->
                                      <label class="kt-file-uploader-label d-flex flex-column flex-xl-row align-items-center align-items-xl-start text-center text-xl-start" for="kt_file_uploader_settings_theme_general">
                                        <i class="ki-duotone ki-file-up fs-3x text-primary"><span class="path1"></span><span class="path2"></span></i>
                                        <!--begin::Info-->
                                        <div class="ms-xl-4 mt-4 mt-xl-0">
                                          <h3 class="fs-5 fw-bold text-gray-900 mb-1">
                                            Upload illustration
                                          </h3>
                                          <span class="fs-7 fw-semibold text-gray-500">
                                            PNG, JPG, SVG up to 10MB
                                          </span>
                                        </div>
                                        <!--end::Info-->
                                      </label>
                                      <!--end::Message-->
                                      <!--begin::Input-->
                                      <input type="file" name="illustration" id="kt_file_uploader_settings_theme_general" accept=".png, .jpg, .jpeg, .svg" data-kt-file-uploader-max-size="10" hidden class="d-none" />
                                    </div>
                                    <!--end::Preview Container-->
                                  </div>
                                  <!--end::Input group-->
                                </div>
                              </div>
                            </div>
                          </div>
                          <!--end::Input group-->
                          <!--begin::Input group-->
                          <div class="row fv-row mb-7">
                            <div class="col-md-3 text-md-end">
                              <!--begin::Label-->
                              <label class="fs-6 fw-semibold form-label mt-3">
                                <span class="required"> Banner Title </span>
                                <span class="ms-1" data-bs-toggle="tooltip" title="Set the title of your website banner.">
                                  <i class="ki-duotone ki-information-5 text-gray-500 fs-6">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                    <span class="path3"></span>
                                  </i>
                                </span>
                              </label>
                              <!--end::Label-->
                            </div>
                            <div class="col-md-9">
                              <!--begin::Input-->
                              <input type="text" class="form-control form-control-solid" name="title" placeholder="" value="" />
                              <!--end::Input-->
                            </div>
                          </div>
                          <!--end::Input group-->
                          <!--begin::Input group-->
                          <div class="row fv-row mb-7">
                            <div class="col-md-3 text-md-end">
                              <!--begin::Label-->
                              <label class="fs-6 fw-semibold form-label mt-3">
                                <span class="required">
                                  Banner Description
                                </span>
                                <span class="ms-1" data-bs-toggle="tooltip" title="Set the description of your website banner.">
                                  <i class="ki-duotone ki-information-5 text-gray-500 fs-6">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                    <span class="path3"></span>
                                  </i>
                                </span>
                              </label>
                              <!--end::Label-->
                            </div>
                            <div class="col-md-9">
                              <!--begin::Textarea-->
                              <textarea class="form-control form-control-solid" name="description" data-kt-autosize="true" rows="5" placeholder="" value=""></textarea>
                              <!--end::Textarea-->
                            </div>
                          </div>
                          <!--end::Input group-->
                          <!--begin::Action buttons-->
                          <div class="row py-5">
                            <div class="col-md-9 offset-md-3">
                              <div class="d-flex">
                                <!--begin::Button-->
                                <button type="reset" data-kt-settings-type="cancel" class="btn btn-light me-3">
                                  Cancel
                                </button>
                                <!--end::Button-->
                                <!--begin::Button-->
                                <button type="submit" data-kt-settings-theme-type="submit" class="btn btn-primary">
                                  <span class="indicator-label">Save</span>
                                  <span class="indicator-progress">Please wait...
                                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span></span>
                                </button>
                                <!--end::Button-->
                              </div>
                            </div>
                          </div>
                          <!--end::Action buttons-->
                        </form>
                        <!--end::Form-->
                      </div>
                      <!--end:::Tab pane-->
                      <!--begin:::Tab pane-->
                      <div class="tab-pane fade" id="kt_settings_theme_alternative" role="tabpanel">
                        <!--begin::Form-->
                        <form id="kt_settings_theme_alternative_form" class="form" data-kt-url="/api/settings/themes/alternative" action="/api/settings/themes/alternative">
                          <!--begin::Heading-->
                          <div class="row mb-7">
                            <div class="col-md-9 offset-md-3">
                              <h2>Alternative Theme Settings</h2>
                            </div>
                          </div>
                          <!--end::Heading-->
                          <!--begin::Input group-->
                          <div class="row fv-row mb-7">
                            <div class="col-md-3 text-md-end">
                              <!--begin::Label-->
                              <label class="fs-6 fw-semibold form-label mt-3">
                                <span>
                                  Illustration Image
                                </span>
                                <span class="ms-1" data-bs-toggle="tooltip" title="Upload your website Logo.">
                                  <i class="ki-duotone ki-information-5 text-gray-500 fs-6">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                    <span class="path3"></span>
                                  </i>
                                </span>
                              </label>
                              <!--end::Label-->
                            </div>
                            <div class="col-md-9">
                              <div class="row">
                                <div class="col-lg-6 col-xl-4">
                                  <!--begin::Input group-->
                                  <div class="fv-row">
                                    <!--begin::Preview Container-->
                                    <div class="kt-file-uploader">
                                      <!--begin::Message-->
                                      <label class="kt-file-uploader-label d-flex flex-column flex-xl-row align-items-center align-items-xl-start text-center text-xl-start" for="kt_file_uploader_settings_theme_alternative">
                                        <i class="ki-duotone ki-file-up fs-3x text-primary"><span class="path1"></span><span class="path2"></span></i>
                                        <!--begin::Info-->
                                        <div class="ms-xl-4 mt-4 mt-xl-0">
                                          <h3 class="fs-5 fw-bold text-gray-900 mb-1">
                                            Upload Media
                                          </h3>
                                          <span class="fs-7 fw-semibold text-gray-500">
                                            PNG, JPG, SVG up to 10MB
                                          </span>
                                        </div>
                                        <!--end::Info-->
                                      </label>
                                      <!--end::Message-->
                                      <!--begin::Input-->
                                      <input type="file" name="illustration" id="kt_file_uploader_settings_theme_alternative" accept=".png, .jpg, .jpeg, .svg" data-kt-file-uploader-max-size="10" hidden class="d-none" />
                                    </div>
                                    <!--end::Preview Container-->
                                  </div>
                                  <!--end::Input group-->
                                </div>
                              </div>
                            </div>
                          </div>
                          <!--end::Input group-->
                          <!--begin::Input group-->
                          <div class="row fv-row mb-7">
                            <div class="col-md-3 text-md-end">
                              <!--begin::Label-->
                              <label class="fs-6 fw-semibold form-label mt-3">
                                <span class="required"> Banner Title </span>
                                <span class="ms-1" data-bs-toggle="tooltip" title="Set the title of your website banner.">
                                  <i class="ki-duotone ki-information-5 text-gray-500 fs-6">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                    <span class="path3"></span>
                                  </i>
                                </span>
                              </label>
                              <!--end::Label-->
                            </div>
                            <div class="col-md-9">
                              <!--begin::Input-->
                              <input type="text" class="form-control form-control-solid" name="title" placeholder="" value="" />
                              <!--end::Input-->
                            </div>
                          </div>
                          <!--end::Input group-->
                          <!--begin::Input group-->
                          <div class="row fv-row mb-7">
                            <div class="col-md-3 text-md-end">
                              <!--begin::Label-->
                              <label class="fs-6 fw-semibold form-label mt-3">
                                <span class="required">
                                  Banner Description
                                </span>
                                <span class="ms-1" data-bs-toggle="tooltip" title="Set the description of your website banner.">
                                  <i class="ki-duotone ki-information-5 text-gray-500 fs-6">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                    <span class="path3"></span>
                                  </i>
                                </span>
                              </label>
                              <!--end::Label-->
                            </div>
                            <div class="col-md-9">
                              <!--begin::Textarea-->
                              <textarea class="form-control form-control-solid" name="description" data-kt-autosize="true" rows="5" placeholder="" value=""></textarea>
                              <!--end::Textarea-->
                            </div>
                          </div>
                          <!--end::Input group-->
                          <!--begin::Action buttons-->
                          <div class="row py-5">
                            <div class="col-md-9 offset-md-3">
                              <div class="d-flex">
                                <!--begin::Button-->
                                <button type="reset" data-kt-settings-type="cancel" class="btn btn-light me-3">
                                  Cancel
                                </button>
                                <!--end::Button-->
                                <!--begin::Button-->
                                <button type="submit" data-kt-settings-theme-type="submit" class="btn btn-primary">
                                  <span class="indicator-label">Save</span>
                                  <span class="indicator-progress">Please wait...
                                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span></span>
                                </button>
                                <!--end::Button-->
                              </div>
                            </div>
                          </div>
                          <!--end::Action buttons-->
                        </form>
                        <!--end::Form-->
                      </div>
                      <!--end:::Tab pane-->
                    </div>
                    <!--end:::Tab content-->
                  </div>
                  <!--end::Card body-->
                </div>
                <!--end::Card-->
              </div>
              <!--end::Content container-->
            </div>
            <!--end::Content-->
          </div>
          <!--end::Content wrapper-->
          <!--begin::Footer-->
          <%- include('../../partials/footer.ejs'); %>
          <!--end::Footer-->
        </div>
        <!--end:::Main-->
      </div>
      <!--end::Wrapper-->
    </div>
    <!--end::Page-->
  </div>
  <!--end::App-->
  <!--begin::Drawers-->
  <!--begin::Activities drawer-->
  <%- include('../../partials/activities-drawer.ejs'); %>
  <!--end::Activities drawer-->
  <!--end::Drawers-->
  <!--begin::Scrolltop-->
  <%- include('../../partials/scroll-top.ejs'); %>
  <!--end::Scrolltop-->
  <!--begin::Javascript-->
  <%- include('../../partials/footer-scripts.ejs', {
    customJavascripts: [
      '/assets/js/custom/apps/settings/theme.js'
    ]
  }); %>
  <!--end::Javascript-->
</body>
<!--end::Body-->

</html>