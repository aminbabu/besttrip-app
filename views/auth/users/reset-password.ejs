<!DOCTYPE html>
<html lang="en">
<!--begin::Head-->
<%- include('../../partials/head.ejs', {title: 'Reset Password'}); %>
<!--end::Head-->
<!--begin::Body-->

<body id="kt_body" class="app-blank">
  <!--begin::Theme mode setup on page load-->
  <%- include('../../partials/theme-mode.ejs'); %>
  <!--end::Theme mode setup on page load-->
  <!--begin::Root-->
  <div class="d-flex flex-column flex-root" id="kt_app_root">
    <!--begin::Authentication - New password -->
    <!--begin::Body-->
    <div class="d-flex flex-column flex-lg-row-fluid p-10">
      <!--begin::Form-->
      <div class="d-flex flex-center flex-column flex-lg-row-fluid">
        <!--begin::Wrapper-->
        <div class="card min-w-325px w-sm-500px mx-sm-auto p-sm-6">
          <div class="card-body">
            <!--begin::Form-->
            <form class="form w-100" novalidate="novalidate" id="kt_new_password_form" data-kt-redirect-url="/admin/login" action="/api/auth/users/reset-password?token<%= token %>" method="post">
              <!--begin::Heading-->
              <div class="text-center mb-10">
                <!--begin::Title-->
                <h1 class="text-gray-900 fw-bolder mb-3">
                  Setup New Password
                </h1>
                <!--end::Title-->
              </div>
              <!--begin::Heading-->
              <!--begin::Input group-->
              <div class="fv-row mb-8" data-kt-password-meter="true">
                <!--begin::Wrapper-->
                <div class="mb-1">
                  <!--begin::Label-->
                  <label for="password" class="fw-bold text-start text-gray-900 fs-6 mb-2 required">Password</label>
                  <!--end::Label-->
                  <!--begin::Input wrapper-->
                  <div class="position-relative mb-3">
                    <input class="form-control bg-transparent" type="password" placeholder="Password" name="password" autocomplete="off" />
                    <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-control="visibility">
                      <i class="fa-regular fa-eye"></i>
                      <i class="fa-regular fa-eye-slash d-none"></i>
                    </span>
                  </div>
                  <!--end::Input wrapper-->
                  <!--begin::Meter-->
                  <div class="d-flex align-items-center mb-3" data-kt-password-meter-control="highlight">
                    <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                    <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                    <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px me-2"></div>
                    <div class="flex-grow-1 bg-secondary bg-active-success rounded h-5px"></div>
                  </div>
                  <!--end::Meter-->
                </div>
                <!--end::Wrapper-->
                <!--begin::Hint-->
                <div class="text-muted">
                  Use 8 or more characters with a mix of letters, numbers &
                  symbols.
                </div>
                <!--end::Hint-->
              </div>
              <!--end::Input group=-->
              <!--end::Input group=-->
              <div class="fv-row mb-8">
                <!--begin::Label-->
                <label for="confirmPassword" class="fw-bold text-start text-gray-900 fs-6 mb-2 required">
                  Repeat Password
                </label>
                <!--end::Label-->
                <!--begin::Input wrapper-->
                <div class="position-relative mb-3" data-kt-password-meter="false">
                  <!--begin::Repeat Password-->
                  <input type="password" placeholder="Repeat Password" name="confirmPassword" autocomplete="off" class="form-control bg-transparent" />
                  <!--end::Repeat Password-->
                  <span class="btn btn-sm btn-icon position-absolute translate-middle top-50 end-0 me-n2" data-kt-password-meter-control="visibility">
                    <i class="fa-regular fa-eye"></i>
                    <i class="fa-regular fa-eye-slash d-none"></i>
                  </span>
                </div>
                <!--end::Input wrapper-->
              </div>
              <!--end::Input group=-->
              <!--begin::Action-->
              <div class="d-grid mb-10">
                <button type="button" id="kt_new_password_submit" class="btn btn-primary">
                  <!--begin::Indicator label-->
                  <span class="indicator-label">Submit</span>
                  <!--end::Indicator label-->
                  <!--begin::Indicator progress-->
                  <span class="indicator-progress">Please wait...
                    <span class="spinner-border spinner-border-sm align-middle ms-2"></span></span>
                  <!--end::Indicator progress-->
                </button>
              </div>
              <!--end::Action-->

              <!--begin::Link-->
              <div class="text-gray-500 fw-semibold fs-6 text-center">
                Have you already reset the password ?
                <a href="/admin/login" class="link-primary fw-bold">Sign in</a>
              </div>
              <!--end::Link-->
            </form>
            <!--end::Form-->
          </div>
        </div>
        <!--end::Wrapper-->
      </div>
      <!--end::Form-->
    </div>
    <!--end::Body-->
    <!--end::Authentication - New password-->
  </div>
  <!--end::Root-->
  <!--begin::Javascript-->
  <%- include('../../partials/footer-scripts.ejs', { customJavascripts: ['/assets/js/custom/authentication/reset-password/new-password.js'] }); %>
  <!--end::Javascript-->
</body>
<!--end::Body-->

</html>